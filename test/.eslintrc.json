{
  "env": {
    "mocha": true,
    "node": true
  },
  "globals": {
    "chai": false,
    "expect": false,
    "testTimeout": false
  },
  "plugins": [
    "mocha"
  ],
  "extends": [
    "plugin:mocha/recommended"
  ],
  "rules": {
    "mocha/no-hooks-for-single-case": [
      "off"
    ],
    "mocha/no-mocha-arrows": [
      "off"
    ],
    "mocha/no-setup-in-describe": [
      "off"
    ],
    "mocha/no-top-level-hooks": [
      "off"
    ],
    "indent": [
      "error",
      4
    ],
    "jasmine/new-line-before-expect": 0,
    "expr": 0
  }
}