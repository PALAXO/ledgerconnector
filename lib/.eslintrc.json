{
    "env": {
        "es6": true,
        "node": true
    },
    "plugins": [
        "promise"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:promise/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "backtick"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-var": [
            "error"
        ],
        "eqeqeq": [
            "error"
        ],
        "arrow-parens": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            "error",
            {
                "args": "after-used"
            }
        ],
        "prefer-const": [
            "error"
        ],
        "prefer-template": [
            "error"
        ],
        "valid-jsdoc": [
            "warn",
            {
                "prefer": {
                    "return": "returns"
                },
                "preferType": {
                    "object": "Object",
                    "Number": "number",
                    "String": "string",
                    "Boolean": "boolean"
                },
                "requireReturn":false,
                "requireParamType": false,
                "requireReturnType": true,
                "requireParamDescription": false,
                "requireReturnDescription": false
            }
        ],
        "promise/always-return": [
            "off"
        ],
        "promise/no-nesting": [
            "off"
        ]
    }
}